<%- include('../partials/header') %>
<div class="card">
    <h2>Property Listings</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Location</th>
                <th>Verified</th>
                <th>Actions</th> </tr>
        </thead>
        <tbody>
            <% properties.forEach(p => { %>
                <tr>
                    <td><%= p.property_id %></td>
                    <td><%= p.property_name %></td>
                    <td><%= p.location %></td>
                    <td>
                        <span class="badge <%= p.is_verified ? 'verified' : 'unverified' %>">
                            <%= p.is_verified ? "✅ Verified" : "❌ Unverified" %>
                        </span>
                    </td>
                    <td>
                        <a href="/admin/properties/view/details/<%= p.property_id %>" 
                           style="background: #007bff; color: white; padding: 5px 12px; border-radius: 4px; text-decoration: none; font-size: 14px;">
                            View Details
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<style>
    .badge { padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: bold; }
    .verified { background: #d4edda; color: #155724; }
    .unverified { background: #f8d7da; color: #721c24; }
</style>
<%- include('../partials/footer') %>