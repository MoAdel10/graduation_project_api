<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background: #f4f4f4;
        }

        .sidebar {
            width: 220px;
            height: 100vh;
            background: #333;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            display: flex;
            flex-direction: column;
        }

        .sidebar h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 12px 20px;
            display: block;
            margin-bottom: 5px;
            border-radius: 4px;
        }

        .sidebar a:hover {
            background: #111;
        }

        .main {
            margin-left: 240px;
            padding: 30px;
        }

        .welcome {
            margin-bottom: 20px;
        }

        .card {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 12px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background: #f5f5f5;
        }

        .logout {
            margin-top: 20px;
            display: inline-block;
            padding: 10px 20px;
            background: #c00;
            color: white;
            text-decoration: none;
            border-radius: 6px;
        }

        .logout:hover {
            background: #900;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h2>Admin Panel</h2>
        <a href="/admin/dashboard?section=admins">Admins</a>
        <a href="/admin/dashboard?section=users">Users</a>
        <a href="/admin/dashboard?section=properties">Properties</a>
        <a href="/admin/logout" class="logout">Logout</a>
    </div>

    <div class="main">
        <div class="welcome">
            <h1>Welcome, <%= admin.email %>!</h1>
            <p>Admin ID: <%= admin.admin_id %> | Role: <%= admin.role %></p>
        </div>

        <div class="card">
            <% if (!section || section === 'admins' && admin.role == "super_admin") { %>
                <h2>Admins</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% admins.forEach(adminItem => { %>
                        <tr>
                            <td><%= adminItem.admin_id %></td>
                            <td><%= adminItem.email %></td>
                            <td><%= adminItem.role %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else if (section === 'users') { %>
                <h2>Users</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.user_id %></td>
                            <td><%= user.first_name+" "+user.second_name %></td>
                            <td><%= user.email %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else if (section === 'properties') { %>
                <h2>Properties</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Location</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% properties.forEach(property => { %>
                        <tr>
                            <td><%= property.property_id %></td>
                            <td><%= property.property_name %></td>
                            <td><%= property.location %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>

</body>
</html>
